# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGIN=http://localhost:3000

# API Key Management
ENCRYPTION_KEY=your_encryption_key_here
KEY_SALT=your_key_salt_here
KEY_ROTATION_INTERVAL=30 # days

# OpenAI API Configuration
OPENAI_KEY_ID=your_openai_key_id_here
OPENAI_API_KEY=your_openai_api_key_here

# Google Maps API Configuration
GOOGLE_MAPS_KEY_ID=your_google_maps_key_id_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
OPENAI_RATE_LIMIT_MAX_REQUESTS=50
MAPS_RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=info
LOG_FILE=server.log

# Cache Configuration
CACHE_TTL=3600 # 1 hour
MAX_CACHE_SIZE=50 # MB

# API Configuration
OPENAI_MODEL=gpt-4o

# Security
CORS_ORIGIN=http://localhost:8000 