{
  "version": 2,
  "builds": [
    {
      "src": "server/mvp-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/server/mvp-server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/mvp-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 